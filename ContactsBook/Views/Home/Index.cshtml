@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">

        <div class="table-responsive">
            <table class="table table-condensed table-hover table-bordered">
                <thead>
                    <tr class="active">
                        <th>Name</th>
                        <th>Surname</th>
                    </tr>
                </thead>

                <tbody class="js-table-body"></tbody>

            </table>
        </div>
        <div>
            <button type="button" class="btn btn-primary" onclick="contactManager.createContact()">Create</button>
            <button disabled="disabled" type="button" class="btn btn-primary js-edit" onclick="contactManager.editContact()">Edit</button>
            <button type="button" class="btn btn-primary" onclick="contactManager.removeContacts()">Delete</button>
            <button type="button" class="btn btn-primary js-select">Select</button>
        </div>
        <br />
    
    </div>
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
        <div class="js-info-bloks">

        </div>
    </div>
</div>

<div class="modal fade js-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title js-modal-title"></h4>
            </div>
            <div class="modal-body js-modal-body">
  

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="modalManager.save()" data-dismiss="modal">Save</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->