<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="margin-top: 20px;">
<div class="container container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation"><a href="/">Contacts</a></li>
                <li role="presentation"><a href="~/Home/Groups">Groups</a></li>
                <li role="presentation"><a href="~/Home/Clocks">Clocks</a></li>
            </ul>
        </div>  
 
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
            @RenderBody()
        </div>
    </div>

</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/ts/modal.js"></script>
    <script src="~/Scripts/ts/cantact.js"></script>
    <script src="~/Scripts/ts/group.js"></script>
    <script src="~/Scripts/ts/clock.js"></script>
</body>
</html>
